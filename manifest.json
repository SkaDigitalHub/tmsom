{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "TMSOM App",
  "short_name": "TMSOM",
  "start_url": "/tmsom/index.html?utm_source=pwa",
  "scope": "/tmsom/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "background_color": "#008000", // Changed from green to HEX
  "theme_color": "#8A1878",
  "description": "Comprehensive platform for TMSOM education access",
  "categories": ["education", "productivity"],
  "author": {
    "name": "SkaDigital Hub",
    "website": "https://skadigitalhub.github.io/SkaApps"
  },
  "orientation": "portrait-primary",
  "dir": "ltr",
  "lang": "en-US",
  "prefer_related_applications": false,
  "screenshots": [
    {
      "src": "assets/img/screen1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard View"
    },
    {
      "src": "assets/img/screen2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "icons": [
    {
      "src": "img/logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "img/logo.png",
      "sizes": "144x144",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "TMSOM AI Agent",
      "short_name": "AI Agent",
      "url": "/tmsom/agent",
      "icons": [{
        "src": "img/agent.avatar.png",
        "sizes": "96x96"
      }]
    },
    {
      "name": "Log in",
      "short_name": "Login",
      "url": "/tmsom/login",
      "description": "Start a new session"
    }
  ],
  "share_target": {
    "action": "/tmsom/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [{
    "action": "/tmsom/pdf-viewer",
    "accept": {
      "application/pdf": [".pdf"],
      "application/octet-stream": [".pdf"],  // Fallback for Linux/Windows
      "application/vnd.pdf": [".pdf"]       // For ChromeOS and Android
    },
  }],
  "protocol_handlers": [{
    "protocol": "web+tmsom",
    "url": "/tmsom/?url=%s"
  }]
}
